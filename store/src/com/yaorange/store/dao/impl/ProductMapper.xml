 <select id="findPageByCid" parameterType="object" resultType="Product">
      select <include refid="allCols"/> from product
      where cid =#{param1}
      order by  pdate desc
      limit #{param2},#{param3}
    </select>
    <select id="getTotalCount" parameterType="object" resultType="Integer">
        select count(pid) from product
        <where>
            <if test="param1 !=null">
            cid=#{param1}
            </if>
            <if test="param2 !=null">
               and pflag=#{param2}
            </if>
        </where>
    </select>
    <select id="findByPid" parameterType="String" resultType="Product">
        select <include refid="allCols"/> from product
        where pid=#{pid}
    </select>
    <select id="findByCid" parameterType="String" resultType="Category">
        select cid,cname from category
        where cid=#{cid}
    </select>
</mapper>